{% extends "Setup/Academic/index.html.twig" %}
{% block page_header %} Affiliation {% endblock %}
{% block breadcurm_nav_list %}
    {{ render_header_list(path('vx_setup_affilition_create'), 'Add Affiliation', 'fas fa-plus-circle') }}
{% endblock %}
{% block content_academic %}
    <div class="panel panel-flat">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="custom-table table  table-hover">
                    <thead class="bg-table-head">
                    <tr class="border-double">
                        <th class="sn text-semibold ">#</th>
                        <th class="text-semibold ">Name</th>
                        <th class="text-semibold ">Code</th>
                        <th class="text-semibold  action text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set counter = 1 %}
                    {% for affiliation in affiliations %}
                    <tr>
                        <td>{{ counter }}</td>
                        <td>{{ affiliation.name }}</td>
                        <td>{{ affiliation.code }}</td>
                        <td class="action text-center">
                            <ul class="icons-list">
                                {{ render_action_button(path('vx_setup_affilition_update', {'id':affiliation.id }), '','fas fa-pencil-alt', 'text-info' ) }}
                                {{ render_action_button(path('vx_delete_affiliation', {'id':affiliation.id }), '','fas fa-trash-alt', 'text-danger' ) }}
                            </ul>
                        </td>
                    </tr>
                        {% set counter = counter + 1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script>
        $('.modalTest').fnAjaxModal();


    </script>

{% endblock %}