{% extends "Setup/Academic/index.html.twig" %}
{% block page_header %} Academic Year {% endblock %}
{% block breadcurm_nav_list %}
 {{ render_header_list(path('vx_academic_year_add'), 'Add Academic Year', 'fas fa-plus-circle') }}
{% endblock %}

{% block content_academic %}
    <div class="panel panel-flat">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="custom-table table  table-hover">
                    <thead class="bg-table-head">
                    <tr class="border-double">
                        <th class="sn text-semibold ">#</th>
                        <th class="text-semibold ">Name</th>

                        <th class="text-semibold">Abbreviation</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th class="text-semibold  action text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set counter = 1 %}
                    {% for academicYear in academicYears %}
                        <tr>
                            <td>{{ counter }}</td>
                            <td>{{ academicYear.academicYearName }}</td>

                            <td>{{ academicYear.abbreviation }}</td>
                            <td>{{ academicYear.toDate | date('Y-m-d') }}</td>
                            <td>{{ academicYear.fromDate  | date('Y-m-d') }}</td>
                            <td class="action text-center">
                                <ul class="icons-list">
                                    {{ render_action_button(path('vx_setup_academic_year_update', {'id':academicYear.id }), '','fas fa-pencil-alt', 'text-info' ) }}
                                    {{ render_action_button(path('vx_delete_academic_year', {'id':academicYear.id }), '','fas fa-trash-alt', 'text-danger' ) }}
                                </ul>
                            </td>
                        </tr>
                        {% set counter = counter + 1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script>
        $('.modalTest').fnAjaxModal();


    </script>

{% endblock %}