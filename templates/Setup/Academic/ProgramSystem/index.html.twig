{% extends "Setup/Academic/index.html.twig" %}
{% block page_header %} Program System {% endblock %}
{% block breadcurm_nav_list %}
 {{ render_header_list(path('vx_program_system_add'), 'Add Program System', 'fas fa-plus-circle') }}
{% endblock %}

{% block content_academic %}
    <div class="panel panel-flat">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="custom-table table  table-hover">
                    <thead class="bg-table-head">
                    <tr class="border-double">
                        <th class="sn text-semibold ">#</th>
                        <th class="text-semibold ">Title</th>
                        <th class="text-semibold ">Abbreviation</th>
                        <th class="text-semibold ">Duration Type</th>
                        <th class="text-semibold ">Duration</th>
                        <th class="text-semibold ">Number of Session</th>
                        <th class="text-semibold ">Program Type</th>
                        <th class="text-semibold  action text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set counter = 1 %}
                    {% for programSystem in programSystems %}
                        <tr>
                            <td>{{ counter }}</td>
                            <td>{{ programSystem.title }}</td>
                            <td>{{ programSystem.abbreviation }}</td>
                            <td>{{ programSystem.durationType }}</td>
                            <td>{{ programSystem.duration }}</td>
                            <td>{{ programSystem.numberOfSession }}</td>
                            <td>{{ programSystem.programType }}</td>
                            <td class="action text-center">
                                <ul class="icons-list">
                                    {{ render_action_button(path('vx_setup_program_system_update', {'id':programSystem.id }), '','fas fa-pencil-alt', 'text-info' ) }}
                                    {{ render_action_button(path('vx_delete_program_system', {'id':programSystem.id }), '','fas fa-trash-alt', 'text-danger' ) }}
                                </ul>
                            </td>
                        </tr>
                        {% set counter = counter + 1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script>
        $('.modalTest').fnAjaxModal();


    </script>

{% endblock %}